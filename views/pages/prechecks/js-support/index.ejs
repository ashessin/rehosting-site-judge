<!DOCTYPE html>
<html lang="en">
<% include ../../../partials/head.ejs %>

<body>
<% include ../../../partials/nav.ejs %>
<main>
    <h1><%= title %></h1>
    <hr>
    <% include ../../../partials/url.ejs %>
    <kbd>preload-js-support</kbd>
    <div class="row">
        <div class="col-4">
            <pre><code><noscript id="preload-js-support">false</noscript></code></pre>
        </div>
        <div class="col">
        </div>
    </div>
    <kbd>postload-js-support</kbd>
    <div class="row">
        <div class="col-4">
            <pre><code id="postload-js-support">unchecked</code></pre>
        </div>
        <div class="col">
            <button id="check-postload-js-support" onclick="checkPostJsSupport()">
                Check Postload JS Support
            </button>
        </div>
    </div>
</main>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const noscript = document.getElementById("preload-js-support");
    const noscriptParent = noscript.parentElement
    noscript.remove();
    noscriptParent.setAttribute("id", "preload-js-support")
    noscriptParent.innerText = 'true'
  })

  function checkPostJsSupport () {
    document.getElementById("postload-js-support").innerText = 'true'
  }
</script>
</body>

</html>
